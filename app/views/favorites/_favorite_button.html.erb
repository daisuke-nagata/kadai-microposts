<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-primary, btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'お気に入り追加', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>